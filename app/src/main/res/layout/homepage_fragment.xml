<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:id="@+id/notificationButtonHomepage"
        android:height="100dp"
        android:width="190dp"
        android:layout_above="@+id/sendWorkoutButtonHomepage"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Trainee"
        android:id="@+id/addTraineeButtonHomepage"
        android:height="100dp"
        android:width="190dp"
        android:layout_above="@+id/addExerciseButtonHomepage"
        android:layout_toEndOf="@+id/notificationButtonHomepage" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Workout"
        android:id="@+id/sendWorkoutButtonHomepage"
        android:height="100dp"
        android:width="190dp"
        android:layout_below="@+id/addTraineeButtonHomepage"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Exercise"
        android:id="@+id/addExerciseButtonHomepage"
        android:width="190dp"
        android:height="100dp"
        android:layout_marginBottom="107dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/notificationButtonHomepage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Exercise Tracker"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>