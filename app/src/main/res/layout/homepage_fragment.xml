<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/Homepage"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Exercise Tracker"
        android:id="@+id/exerciseTrakcerHeaderHomepage"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:columnCount="2"
        android:rowCount="3"
        android:useDefaultMargins="true"
        android:id="@+id/buttonGridHomepage"
        android:horizontalSpacing = "60dp"
        android:padding="20dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:id="@+id/notificationButtonHomepage"
            android:height="100dp"
            android:width="130dp"
            android:layout_marginLeft="@dimen/abc_action_bar_default_padding_material"
            android:layout_marginRight="@dimen/abc_action_bar_default_padding_material"
            android:padding="2dp"
            android:layout_row="0"
            android:layout_column="0"
            android:drawableTop="@android:drawable/ic_dialog_email"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Trainee"
            android:id="@+id/addTraineeButtonHomepage"
            android:height="100dp"
            android:width="130dp"
            android:layout_alignParentBottom="true"
            android:padding="2dp"
            android:layout_row="0"
            android:layout_column="1"
            android:drawableTop="@android:drawable/ic_menu_my_calendar"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Workout"
            android:id="@+id/sendWorkoutButtonHomepage"
            android:height="100dp"
            android:width="130dp"
            android:layout_margin="@dimen/abc_action_bar_default_padding_material"
            android:padding="2dp"
            android:layout_row="1"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight Tracker"
            android:id="@+id/weightTrackerButtonHomepage"
            android:width="130dp"
            android:height="100dp"
            android:padding="2dp"
            android:layout_marginLeft="@dimen/abc_action_bar_default_padding_material"
            android:layout_marginRight="@dimen/abc_action_bar_default_padding_material"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Exercise"
            android:id="@+id/createExerciseButtonHomepage"
            android:width="130dp"
            android:height="100dp"
            android:padding="2dp"
            android:layout_marginLeft="@dimen/abc_action_bar_default_padding_material"
            android:layout_marginRight="@dimen/abc_action_bar_default_padding_material"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_row="1"
            android:layout_column="1"
            android:drawableTop="@android:drawable/ic_menu_edit"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Records"
            android:id="@+id/personalRecordsButtonHomepage"
            android:width="130dp"
            android:height="100dp"
            android:padding="2dp"
            android:layout_marginLeft="@dimen/abc_action_bar_default_padding_material"
            android:layout_marginRight="@dimen/abc_action_bar_default_padding_material"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_row="2"
            android:layout_column="1" />

    </GridLayout>

</RelativeLayout>